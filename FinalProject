import java.util.Scanner;
public class Shopping
{
	public static void main(String[] args) {
	    System.out.println("Вас приветствует список покупок!");
	    
	    String[] shoppingList = new String[8];
	    int productCount = 0;
	    
	    Scanner scanner = new Scanner(System.in);
	    
	    while (true) {
	        System.out.println("Выберите одну из команд:");
            System.out.println("1. Добавить товар в список");
            System.out.println("2. Показать список");
            System.out.println("3. Очистить список");
            System.out.println("4. Завершить работу");

            int actionNumber = scanner.nextInt();
            
            if (actionNumber == 1) {
                if (productCount < shoppingList.length) {
           System.out.println("Введите название товара:");
           String productName = scanner.next();
           
           for (int i = 0; i < shoppingList.length; i++) {
               if (productName.equals(shoppingList[i])) {
                   System.out.println("Данный товар уже есть в списке.");
                   return;
               }
           }
           
           shoppingList[productCount] = productName;
           productCount +=1;
           System.out.println("Товар " + productName + " добавлен в список под номером " + productCount);
                  
                } else { //убедиться, что работает
                   System.out.println("Превешено количество товаров в списке");
                   return;
                }
            } else if (actionNumber == 2) { //вывод списка
                if (productCount == 0) {
                  System.out.println("Список товаров пуст!");  
                } else {
                    
                    for (int i = 0; i < productCount; i++) {
                      System.out.println((i + 1) + ". " + shoppingList[i]); 
                    }
                }
            } else if (actionNumber == 3) { //очищаем список товаров
             for (int i = 0; i <= productCount; i++) {
                 productCount -=1;
             } System.out.println("Список товаров очищен");
                
            } else if (actionNumber == 4) { //выход из программы
                System.out.println("До новых встреч!");
                break;
            } else {
                System.out.println("Неизвестная команда!");
            }
	    }
		

	}
}

